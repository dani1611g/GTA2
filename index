<body>
    <div class="container">
        <h1>Preguntas por Categoría</h1>
        
        <div id="main-section">
            <p>Selecciona una categoría para hacer tu pregunta:</p>
            
            <div class="categories">
                <div class="category" id="vehiculos" onclick="showForm('vehiculos')">Vehículos</div>
                <div class="category" id="piloto" onclick="showForm('piloto')">Piloto</div>
                <div class="category" id="cross" onclick="showForm('cross')">Cross</div>
            </div>
        </div>
        
        <div id="vehiculos-form" class="form-section">
            <h2>Pregunta sobre Vehículos</h2>
            <textarea id="vehiculos-question" placeholder="Escribe tu pregunta relacionada con vehículos..."></textarea>
            <div>
                <button class="back-btn" onclick="goBack()">Volver</button>
                <button onclick="submitQuestion('vehiculos')">Enviar Pregunta</button>
            </div>
        </div>
        
        <div id="piloto-form" class="form-section">
            <h2>Pregunta sobre Piloto</h2>
            <textarea id="piloto-question" placeholder="Escribe tu pregunta relacionada con pilotos..."></textarea>
            <div>
                <button class="back-btn" onclick="goBack()">Volver</button>
                <button onclick="submitQuestion('piloto')">Enviar Pregunta</button>
            </div>
        </div>
        
        <div id="cross-form" class="form-section">
            <h2>Pregunta sobre Cross</h2>
            <textarea id="cross-question" placeholder="Escribe tu pregunta relacionada con cross..."></textarea>
            <div>
                <button class="back-btn" onclick="goBack()">Volver</button>
                <button onclick="submitQuestion('cross')">Enviar Pregunta</button>
            </div>
        </div>
        
        <div id="confirmation">
            <h2>¡Gracias por tu pregunta!</h2>
            <p>Tu pregunta ha sido enviada correctamente.</p>
            <button onclick="goBack()">Hacer otra pregunta</button>
        </div>
        
        <div id="admin-section">
            <h2>Panel de Administrador</h2>
            <p>Aquí verás todas las preguntas enviadas:</p>
            
            <div id="qrcode-container">
                <h3>Código QR para compartir</h3>
                <div id="qrcode"></div>
                <p>Enlace: <span id="share-url"></span></p>
            </div>
            
            <div id="question-list"></div>
        </div>
    </div>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script>
        // Variables para almacenar preguntas
        let questions = {
            vehiculos: [],
            piloto: [],
            cross: []
        };
        
        // Mostrar formulario de categoría seleccionada
        function showForm(category) {
            document.getElementById('main-section').style.display = 'none';
            document.getElementById(`${category}-form`).style.display = 'block';
        }
        
        // Volver a la pantalla principal
        function goBack() {
            document.getElementById('main-section').style.display = 'block';
            document.getElementById('vehiculos-form').style.display = 'none';
            document.getElementById('piloto-form').style.display = 'none';
            document.getElementById('cross-form').style.display = 'none';
            document.getElementById('confirmation').style.display = 'none';
        }
        
        // Enviar pregunta
        function submitQuestion(category) {
            const questionText = document.getElementById(`${category}-question`).value.trim();
            
            if (questionText === '') {
                alert('Por favor, escribe una pregunta antes de enviar');
                return;
            }
            
            // Almacenar la pregunta
            questions[category].push(questionText);
            
            // Guardar en localStorage
            localStorage.setItem('questionsData', JSON.stringify(questions));
            
            // Mostrar confirmación
            document.getElementById(`${category}-form`).style.display = 'none';
            document.getElementById('confirmation').style.display = 'block';
            
            // Limpiar el formulario
            document.getElementById(`${category}-question`).value = '';
            
            // Actualizar lista de preguntas
            updateQuestionList();
        }
        
        // Actualizar lista de preguntas en el panel de administrador
        function updateQuestionList() {
            const questionListElement = document.getElementById('question-list');
            questionListElement.innerHTML = '';
            
            // Comprobar si hay preguntas
            let hasQuestions = false;
            for (const category in questions) {
                if (questions[category].length > 0) {
                    hasQuestions = true;
                    break;
                }
            }
            
            if (!hasQuestions) {
                questionListElement.innerHTML = '<p>Aún no hay preguntas enviadas.</p>';
                return;
            }
            
            // Mostrar preguntas por categoría
            for (const category in questions) {
                if (questions[category].length > 0) {
                    const categoryTitle = document.createElement('h3');
                    categoryTitle.textContent = category.charAt(0).toUpperCase() + category.slice(1);
                    questionListElement.appendChild(categoryTitle);
                    
                    questions[category].forEach((question, index) => {
                        const questionItem = document.createElement('div');
                        questionItem.className = `question-item ${category}-question`;
                        questionItem.innerHTML = `
                            <p><strong>Pregunta ${index + 1}:</strong> ${question}</p>
                        `;
                        questionListElement.appendChild(questionItem);
                    });
                }
            }
        }
        
        // Generar código QR para compartir
        function generateQR() {
            const shareUrl = window.location.href;
            document.getElementById('share-url').textContent = shareUrl;
            
            // Limpiar contenedor de QR antes de generar uno nuevo
            document.getElementById('qrcode').innerHTML = '';
            
            // Generar código QR
            new QRCode(document.getElementById('qrcode'), {
                text: shareUrl,
                width: 200,
                height: 200,
                colorDark: '#000000',
                colorLight: '#ffffff',
                correctLevel: QRCode.CorrectLevel.H
            });
        }
        
        // Cargar datos guardados al iniciar
        window.onload = function() {
            const savedData = localStorage.getItem('questionsData');
            if (savedData) {
                questions = JSON.parse(savedData);
                updateQuestionList();
            }
            
            generateQR();
        };
    </script>
</body>
